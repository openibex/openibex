{
  "name": "openibex",
  "version": "0.0.1",
  "author": "Ibex Labs <office@ibex.host>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenIbex/openibex.git"
  },
  "bugs": {
    "url": "https://github.com/OpenIbex/openibex/issues"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "ipfs",
    "middleware",
    "web3",
    "distributed",
    "database",
    "orbitdb"
  ],
  "private": true,
  "scripts": {
    "build": "npx lerna run --stream build",
    "test": "jest",
    "clean": "npx lerna run --stream clean",
    "purge": "npx rimraf --glob node_modules dist data/orbitdb data/ipfs data/identities logs/ packages/**/node_modules src/**/dist",
    "oi": "tsx --watch packages/cli/src/index.ts"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "e2e-tests"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "lerna": "^8.1.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "tsup": "^8.3.0",
    "tsx": "^4.11.2"
  }
}
